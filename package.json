{
  "name": "gitlivelog",
  "displayName": "GitLiveLog",
  "description": "Tired of your GitHub activity graph making you look like you've been on a year-long sabbatical? Let GitLiveLog save you from commit embarrassment! ðŸš€ This VS Code extension commits every actual keystroke of effort.",
  "version": "0.0.2",
  "publisher": "danishweb",
  "private": false,
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/danishweb/gitlivelog"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "automation",
    "productivity",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:gitlivelog.showMenu",
    "onCommand:gitlivelog.startTracking",
    "onCommand:gitlivelog.stopTracking"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitlivelog.showMenu",
        "title": "GitLiveLog: Show Menu"
      },
      {
        "command": "gitlivelog.startTracking",
        "title": "GitLiveLog: Start Tracking"
      },
      {
        "command": "gitlivelog.stopTracking",
        "title": "GitLiveLog: Stop Tracking"
      }
    ],
    "configuration": {
      "title": "GitLiveLog",
      "properties": {
        "gitlivelog.isTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic commit tracking"
        },
        "gitlivelog.commitFrequency": {
          "type": "number",
          "default": 5,
          "description": "Minutes between commits when changes are detected"
        },
        "gitlivelog.ai.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable AI-powered commit messages"
        },
        "gitlivelog.ai.model": {
          "type": "string",
          "default": "gemini-pro",
          "enum": [
            "gemini-pro",
            "gpt-3.5-turbo",
            "gpt-4",
            "deepseek-chat"
          ],
          "description": "AI model to use for generating commit messages"
        },
        "gitlivelog.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected AI model"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.47.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "openai": "^4.20.1"
  }
}
